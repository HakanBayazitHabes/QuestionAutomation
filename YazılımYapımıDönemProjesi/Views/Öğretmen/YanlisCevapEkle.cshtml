        <div class="col-md-10">
            <br />
            <h2>Yanlış Cevap Ekle</h2>
            <br />
            <div class="content-from">
                <form class="form-group" method="post">
                    @Html.TextBoxFor(x => x.QuestionID, new { style = "display:none;", @Value = ViewBag.deger })
                    <label>Yanlış Cevap 1</label>
                    @Html.TextBoxFor(x => x.WrongAnswer_1, new { @required = "required", @class = "form-control " })
