                    <label>Yanlış Cevap 2</label>
                    @Html.TextBoxFor(x => x.WrongAnswer_2, new { @required = "required", @class = "form-control" })
                    <br />
                    <label>Yanlış Cevap 3</label>
                    @Html.TextBoxFor(x => x.WrongAnswer_3, new { @required = "required", @class = "form-control" })
                    <br />

                    <button onclick="validation();" class="btn btn-primary">Yanlış Cevapları Ekle</button>


                </form>
            </div>
        </div>
        <div class="col-md-6">

        </div>
    </div>
</div>

<script type="text/javascript">
